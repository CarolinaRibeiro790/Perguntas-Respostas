<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>
            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
              
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>

                <form method="POST" action="/responder">
                    <h5>Resposta</h5>
                    <textarea placeholder="Digite sua resposta" name="corpo" class="form-control" cols="30" rows="10"></textarea> <br>
                    <button type="submit" class="btn btn-outline-success">Responder</button>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                </form>
            
                <% respostas.forEach(resposta=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <%= resposta.corpo %>
                        </div>

                        <div class="card-footer">
                            <a href="/resposta/delete/<%= resposta.id %>">
                                <button class="btn btn-danger">Apagar</button>
                            </a>
                        </div>

                    </div>
                    <% }) %>
            </div>
    </body>

    <%- include ('partials/footer.ejs') %>