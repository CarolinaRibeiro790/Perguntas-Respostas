<%- include ('partials/header.ejs') %>
<body>

<%- include ('partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h4>Todas perguntas</h4>
    <hr>
    <a href="/question" class="btn btn-secondary mb-3">Nova pergunta</a>
    <% perguntas.forEach(pergunta => { %>
       <br>
       <div class="card">
        <div class="card-body">
            <h3> <%- pergunta.titulo %></h3>
        </div>
        <div class="footer">
            <a href="/question/<%= pergunta.id %>">
                <button class="btn btn-outline-primary m-2">Responder</button>
            </a>
        </div>
       </div>
    <% }) %>
</div>

</body>

<%- include ('partials/footer.ejs') %>
